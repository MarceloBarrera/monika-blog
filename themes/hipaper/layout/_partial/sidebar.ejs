<aside id="sidebar"<% if (theme.sidebar === 'bottom'){ %> class="outer"<% } %>>
    <% theme.widgets.forEach(function(widget){ %>
    <%- partial('_widget/' + widget) %>
    <% }) %>
    <style>
        #gr_updates_widget{
            border-radius: 1px;
            background-color:#fff;
            border:solid #000000 1px;
            -webkit-box-shadow: 0px 0px 4px 1px #595959,
            inset 0px 0px 0px 1px #000000;
            -moz-box-shadow: 0px 0px 4px 1px #595959,
            inset 0px 0px 0px 0px #000000;
            box-shadow: 0px 0px 2px 0px #000000,
            inset 0px 0px 0px 0px #000000;
            padding: 15px 1px 35px 8px;
            width:300px;
            height:375px;
        }
        #gr_footer{
            margin-bottom:10px;
        }
        #gr_updates_widget p{
            padding:0px;
            margin:0;
            font-size:14px;
        }
        #gr_footer img{
            width:100px;
            float:left;
        }
        #gr_updates_widget img{
            border-style:none;
        }

    </style>

    <div id="gr_updates_widget">
        <iframe id="the_iframe" src="https://www.goodreads.com/widgets/user_update_widget?height=320&num_updates=3&user=72425080&width=300" width="300" height="320" frameborder="0"></iframe>
        <div id="gr_footer">
            <a href="https://www.goodreads.com/"><img alt="Goodreads: Book reviews, recommendations, and discussion" src="https://www.goodreads.com/images/layout/goodreads_logo_140.png" /></a>
        </div>
    </div>


</aside>